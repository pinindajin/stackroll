{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@logging/*": ["logging/*"],
      "@game/*": ["api/game/*"],
      "@roll/*": ["api/roll/*"],
      "@stat/*": ["api/stat/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}